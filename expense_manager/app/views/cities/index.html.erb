<h1>Cities of Sandzak region</h1>

<table class="expense_tabela">
  <tr>
    <td>Name</td>
    <td>Link</td>
    <td>Edit</td>
    <td>Destroy</td>
  </tr>
  <% @cities.each do |city| %>
    <tr>
      <td><%= city.name %></td>
      <td><%= link_to "#{city.id}", city_path(city.id) %></td>
      <td><%= link_to "Edit", edit_city_path(city.id) %></td></td>
      <td><%= link_to "Delete", {action: :destroy, id: city.id}, method: :delete, data: {confirm: "Are you sure?"} %></td>
    </tr>
  <% end %>
</table>

<%= link_to "Add new city", new_city_path %>